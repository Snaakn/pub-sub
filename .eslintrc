{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb/base",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "globals": {
    "BroadcastChannel": false
  },
  "rules": {
    "comma-dangle": 0,
    "prefer-destructuring": 0,
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "no-param-reassign": ["error", { "props": false }],
    "no-plusplus": 0,
    "no-underscore-dangle": 0
  }
}

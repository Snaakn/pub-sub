{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb/base",
    "plugin:prettier/recommended",
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
  },
  "plugins": [
    "prettier"
  ],
  "globals": {
    "BroadcastChannel": false
  },
  "rules": {
    "comma-dangle": 0,
    "prefer-destructuring": 0,
    "no-param-reassign": ["error", { "props": false }],
    "no-plusplus": 0,
    "no-underscore-dangle": 0
  }
}
